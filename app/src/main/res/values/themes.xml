<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoListProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Cyan_700</item>
        <item name="colorPrimaryVariant">@color/Cyan_900</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Cyan_600</item>
        <item name="colorSecondaryVariant">@color/Cyan_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Radio buttons. -->
        <item name="radioButtonStyle">@style/Widget.Cupcake.CompoundButton.RadioButton</item>
        <!-- Text appearance style. -->
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Cupcake.Subtitle1</item>

        <item name="checkboxStyle">@style/Widget.App.CheckBox</item>
    </style>



</resources>